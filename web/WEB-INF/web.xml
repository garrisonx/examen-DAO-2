<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>obtenerContinentes</servlet-name>
        <servlet-class>examen.servlet.obtenerContinentes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenerContinente</servlet-name>
        <servlet-class>examen.servlet.obtenerContinente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crearContinente</servlet-name>
        <servlet-class>examen.servlet.crearContinente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminarContinente</servlet-name>
        <servlet-class>examen.servlet.eliminarContinente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificarContinente</servlet-name>
        <servlet-class>examen.servlet.modificarContinente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findContinente</servlet-name>
        <servlet-class>examen.servlet.findContinente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>obtenerContinentes</servlet-name>
        <url-pattern>/obtenerContinentes.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenerContinente</servlet-name>
        <url-pattern>/obtenerContinente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crearContinente</servlet-name>
        <url-pattern>/crearContinente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminarContinente</servlet-name>
        <url-pattern>/eliminarContinente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificarContinente</servlet-name>
        <url-pattern>/modificarContinente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findContinente</servlet-name>
        <url-pattern>/findContinente.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
